.title {
  text-align: center;
  font-weight: bold;
  padding: 20rpx;
  font-size: 40rpx;
}

.list {
  padding: 20rpx;
  padding-bottom: 210rpx;
}

.save-btn {
  text-align: center;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  line-height: 90rpx;
  background-color: #07c160;
  color: white;
  left: 0;
}

.cover {
  position: absolute;
  left: 0px;
  top: 0px;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  /*宽度设置为100%，这样才能使隐藏背景层覆盖原页面*/
  height: 100%;
  filter: alpha(opacity=100);
  /*设置透明度为100%*/
  opacity: 1;
  /*非IE浏览器下设置透明度为100%*/
  display: block;
  z-Index: 1;
}

.mini-btn {
  position: absolute;
  top: 50%;
  left: 36%;
  background-color: #07c160;
  color: #fff;
}




