/* component/ListItem.wxss */
.listItem {
    padding: 20rpx;
    background-color: #efefef;
    margin-bottom: 10rpx;
    color: #333;
    border-radius: 10rpx;
}

.operation {
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}

.operation-button {
    min-width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: 2rpx solid #ccc;
    border-radius: 10rpx;
    margin-right: 10rpx;
    color: #555;
    background-color: white;
    padding: 0 10rpx;
}

.share-button {
    padding: 0px;
}

.view-hover {
    background-color: #eee;
}